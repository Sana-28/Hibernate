package com.bridgeit.HibernateLogin;

import java.util.Scanner;

import org.hibernate.tool.schema.internal.exec.ScriptSourceInputNonExistentImpl;

import com.bridgeit.HibernateLogin.dao.UserDAO;
import com.bridgeit.HibernateLogin.dto.User;

/**
 * Hello world!
 *
 */
public class App {
	
	public static User createUser(){
		Scanner scanner = new Scanner(System.in);
		User user= new User();
		System.out.println("Enter Id: ");
		int id = scanner.nextInt();
		user.setId(id);
		System.out.println("Enter Name: ");
		String name = scanner.next();
		user.setName(name);
		System.out.println("Enter password :");
		String pass = scanner.next();
		user.setPassword(pass);
		
		return null;
	}
	public static void main(String[] args) {
		
		
		
		User user = new User();
		user.setId(3);
		user.setName("Jack");
		user.setPassword("543");

		User user1 = new User();
		user1.setId(2);
		user1.setName("xyz");
		user1.setPassword("321");

		UserDAO userDao = new UserDAO();

		userDao.saveUser(user);
		// userDao.saveUser(user1);
		System.out.println("Object saved successfully..");
		
		/*For deleting*/
		User deleteUser = new User();
		UserDAO userDAO = new UserDAO();
		
		userDAO.deleteUser(user);
		System.out.println("Object deleted successfully...");

	}
}
