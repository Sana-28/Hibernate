package com.bridgeit.HibernateLogin;

import java.util.Scanner;

import org.hibernate.tool.schema.internal.exec.ScriptSourceInputNonExistentImpl;

import com.bridgeit.HibernateLogin.dao.UserDAO;
import com.bridgeit.HibernateLogin.dto.User;

/**
 * Hello world!
 *
 */
public class App {
	
	static Scanner scanner = new Scanner(System.in);
	public static User createUser(){
		
		User user= new User();
		System.out.println("Enter Id: ");
		int id = scanner.nextInt();
		user.setId(id);
		System.out.println("Enter Name: ");
		String name = scanner.next();
		user.setName(name);
		System.out.println("Enter password :");
		String pass = scanner.next();
		user.setPassword(pass);
		
		return user;
	}
	public static void main(String[] args) {
		
		
		
		System.out.println("Enter Number of Object:");
		UserDAO userDao = new UserDAO();

		int n=scanner.nextInt();
		for(int i =0; i<n;i++){
			
			userDao.saveUser(createUser());
			
		}
/*
